<UserControl x:Class="QuizApp.View.OptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500">
    <Grid>
        <StackPanel Height="50" Width="500" Orientation="Horizontal">
            <CheckBox IsChecked="{Binding IsCorrect, Mode=TwoWay}" Content="{Binding Index, Mode=TwoWay}" HorizontalAlignment="Left" Width="100" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Answer, Mode=TwoWay}" Width="300" FontSize="20" />
            <Button Command="{Binding AddImage}" Content="img" Width="50" HorizontalAlignment="Right" Margin="30,0,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
